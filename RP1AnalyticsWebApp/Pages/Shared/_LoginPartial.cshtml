@inject SignInManager<Models.WebAppUser> SignInManager
@inject UserManager<Models.WebAppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a style="color: #fff;" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new {area = ""})" method="post">
        <button type="submit" class="button is-dark ml-5">Logout</button>
    </form>
}
else
{
    <a class="button is-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="button" asp-area="Identity" asp-page="/Account/Login">Login</a>
}