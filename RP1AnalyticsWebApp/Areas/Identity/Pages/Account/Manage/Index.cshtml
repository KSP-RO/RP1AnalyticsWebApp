@page
@using RP1AnalyticsWebApp.Models



@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;

}

<partial name="_StatusMessage" model="Model.StatusMessage"/>

<div class="box container mt-4 ml-4">
    <h2 class="subtitle">How to submit your career</h2>
    <ol class="ml-4">
        <li>Create a career below</li>
        <li>
            Open up the ingame RP-1 UI, switch to the "Career Log" tab and fill in the following data:
            <ul>
                <li>Server URL - <span style="background: lightgray;" class="is-family-code">https://rp1careerlog.azurewebsites.net/api/CareerLogs/</span></li>
                <li>Token - the value after your career name in the table below</li>
            </ul>
        </li>
        <li>Click the "Export to web" button</li>
    </ol>
</div>


<div class="ml-4 box">
    <h2 class="subtitle">Careers</h2>
    <table class="table is-bordered is-fullwidth">
        <thead>
        <tr>
            <th>Name</th>
            <th>Token</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var c in Model.Careers)
        {
            <tr>
                <td class="is-vcentered">
                    <a href="/?careerId=@c.Id">@c.name</a>
                </td >
                <td class="is-vcentered">@c.token</td>
                <td class="is-vcentered">
                    <div class="buttons are-small">
                        <a class="button is-info is-small" asp-route-token="@c.token" asp-page="EditCareer">
                            <span class="icon is-small">
                                <i class="fa fa-edit"></i>
                            </span>
                            <span>Edit Information</span>
                        </a>
                        @* <button class="button is-black is-small"> *@
                        @*     <span class="icon is-small"> *@
                        @*         <i class="fa fa-eye-slash"></i> *@
                        @*     </span> *@
                        @*     <span>Hide</span> *@
                        @* </button> *@
                        <form method="post">
                            <button
                                onclick="return confirm('Do you really want to delete this career log?')"
                                type="submit"
                                class="button is-danger is-small"
                                asp-route-token="@c.token"
                                asp-page-handler="delete">
                                <span class="icon is-small">
                                    <i class="fa fa-trash"></i>
                                </span>
                                <span>Delete</span>

                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>


    <div class="pt-5">
        <h2 class="subtitle">Add a new career</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="field">
                <label class="label" asp-for="Input.CareerName"></label>
                <div class="control">
                    <input asp-for="Input.CareerName" class="input is-info form-control"/>
                    <span asp-validation-for="Input.CareerName" class="text-danger"></span>
                </div>
            </div>

            <div class="columns">
                <div class="column">
                    <div class="field">
                        <div class="control is-expanded">
                            <label class="label" asp-for="Input.DifficultyLevel"></label>
                            <div class="select is-fullwidth">
                                <select asp-for="Input.DifficultyLevel" asp-items="Html.GetEnumSelectList<DifficultyLevel>()">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="column">
                    <div class="field">
                        <div class="control is-expanded">
                            <label class="label" asp-for="Input.CareerPlaystyle"></label>
                            <div class="select is-fullwidth">
                                <select asp-for="Input.CareerPlaystyle" asp-items="Html.GetEnumSelectList<CareerPlaystyle>()">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="columns">
                <div class="column">
                    <div class="field">
                        <div class="control is-expanded">
                            <label class="label" asp-for="Input.FailureModel"></label>
                            <div class="select is-fullwidth">
                                <select asp-for="Input.FailureModel" asp-items="Html.GetEnumSelectList<FailureModel>()">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="column">
                    <div class="field">
                        <label class="label" asp-for="Input.ConfigurableStart"></label>
                        <div class="select is-fullwidth">
                            <select asp-for="Input.ConfigurableStart" asp-items="Html.GetEnumSelectList<ConfigurableStart>()">
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="columns">
                <div class="column">
                    <div class="field">
                        <div class="control is-expanded">
                            <label class="label" asp-for="Input.ModRecency"></label>
                            <div class="select is-fullwidth">
                                <select asp-for="Input.ModRecency" asp-items="Html.GetEnumSelectList<ModRecency>()">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="column">
                    <div class="field">
                        <label class="label" asp-for="Input.ModVersion"></label>
                        <input class="input" type="text" asp-for="Input.ModVersion"/>
                        <span asp-validation-for="Input.ModVersion" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="columns">
                <div class="column">
                    <div class="field">
                        <label class="label" asp-for="Input.CreationDate"></label>
                        <input class="input" type="date" asp-for="Input.CreationDate" />
                    </div>
                </div>
                <div class="column"></div>
            </div>

            <div class="field">
                <label class="label" asp-for="Input.DescriptionText"></label>
                <textarea class="textarea" asp-for="Input.DescriptionText" cols="150" rows="10"></textarea>
            </div>

            <div class="control">
                <button id="update-profile-button" type="submit" class="button is-info">Save</button>
            </div>
        </form>
    </div>
</div>