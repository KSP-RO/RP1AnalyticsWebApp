@page
@using RP1AnalyticsWebApp.Models
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage"/>

<div class="box container mt-4 ml-4">
    <h2 class="subtitle">How to submit your career</h2>
    <ol class="ml-4">
        <li>Create a career below</li>
        <li>
            Open up the ingame RP-1 UI, switch to the "Career Log" tab and fill in the following data:
            <ul>
                <li>Server URL - https://rp1careerlog.azurewebsites.net/api/CareerLogs/</li>
                <li>Token - the value after your career name in the table below</li>
            </ul>
        </li>
        <li>Click the "Export to web" button</li>
    </ol>
</div>

<div class="ml-4 box">
    <h2 class="subtitle">Careers</h2>
    <table class="table is-bordered is-fullwidth">
        <thead>
        <tr>
            <th>Name</th>
            <th>Token</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var c in Model.Careers)
        {
            <tr>
                <td>
                    <a href="/?careerId=@c.Id">@c.name</a>
                </td>
                <td>@c.token</td>
            </tr>
        }
        </tbody>
    </table>


    <div class="pt-5">
        <h2 class="subtitle">Add a new career</h2>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="field">
                <label class="label" asp-for="Input.CareerName"></label>
                <div class="control">
                    <input asp-for="Input.CareerName" class="input is-info form-control"/>
                    <span asp-validation-for="Input.CareerName" class="text-danger"></span>
                </div>
            </div>

            <div class="field">
                <label class="label" asp-for="Input.DifficultyLevel"></label>
                <div class="select">
                    <select asp-for="Input.DifficultyLevel" asp-items="Html.GetEnumSelectList<DifficultyLevel>()">
                    </select>
                </div>
            </div>

            <div class="field">
                <label class="label" asp-for="Input.CareerPlaystyle"></label>
                <div class="select">
                    <select asp-for="Input.CareerPlaystyle" asp-items="Html.GetEnumSelectList<CareerPlaystyle>()">
                    </select>
                </div>
            </div>

            <div class="field">
                <label class="label" asp-for="Input.ConfigurableStart"></label>
                <div class="select">
                    <select asp-for="Input.ConfigurableStart" asp-items="Html.GetEnumSelectList<ConfigurableStart>()">
                    </select>
                </div>
            </div>

            <div class="field">
                <label class="label" asp-for="Input.DescriptionText"></label>
                <textarea class="textarea" asp-for="Input.DescriptionText" cols="150" rows="10"></textarea>
            </div>
            <div class="control">
                <button id="update-profile-button" type="submit" class="button is-info">Save</button>
            </div>
        </form>
    </div>
</div>